@model IEnumerable<SessionPlanner.Models.SessionType.SessionTypeListItem>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Admin"))
{

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePerHour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SessionTypeID }) |
            @Html.ActionLink("Details", "Details", new { id = item.SessionTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SessionTypeID })
        </td>
    </tr>
}

</table>
}

@model IEnumerable<SessionPlanner.Data.ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

@if (User.IsInRole("Admin"))
{
    <h2>All Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
             @Html.DisplayFor(modelItem => item.UserName)
            </td>
         
            <td>
             @Html.DisplayFor(modelItem => item.FullName)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "UpdateUserFromList", new { id = item.Id }) |
                @Html.ActionLink("User Details", "GetUserDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
    }

</table>
}
